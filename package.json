{
  "name": "estebanhub-monorepo",
  "version": "1.0.0",
  "description": "EstebanHub - Site institucional e CMS",
  "private": true,
  "scripts": {
    "frontend:dev": "cd frontend && npm run dev:ssr",
    "backend:dev": "cd backend && npm run start:dev",
    "frontend:build": "cd frontend && npm run build",
    "backend:build": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../shared && npm install && cd ..",
    "clean": "rm -rf frontend/node_modules backend/node_modules shared/node_modules node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/estebanhub.git"
  },
  "keywords": [
    "angular",
    "nestjs",
    "supabase",
    "website",
    "cms"
  ],
  "author": "EstebanHub",
  "license": "UNLICENSED"
}
